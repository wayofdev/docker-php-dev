---

file:
{% if true == install_faketime %}
  /usr/lib/faketime/libfaketime.so.1:
    filetype: file
    exists: true
{% endif %}
{% if 'xdebug' in ext_pecl_enabled %}
  /usr/local/etc/php/conf.d/99-xdebug.ini:
    filetype: file
    exists: true
    contains:
      - "xdebug.mode = Off"
{% endif %}
{% if 'supervisord' == php_type %}
  /tmp/supervisord.pid:
    filetype: file
    exists: true
    contains:
      - "1"
process:
  supervisord:
    running: true
{% endif %}
{% if 'fpm' == php_type %}
process:
  php-fpm:
    running: true
port:
  tcp6:9000:
    listening: true
    ip:
      - '::'
{% endif %}
package:
{% for pkg in system_packages | unique | sort %}
  {{ pkg }}:
    installed: true
{% endfor %}
{% if 'cli' == php_type %}
{% if true == install_postgres_client %}
  postgresql-client:
    installed: true
{% endif %}
{% if true == install_postgres_postgis %}
  postgis:
    installed: true
{% endif %}
{% if true == install_mysql_client %}
  mysql-client:
    installed: true
{% endif %}
{% endif %}
command:
  "php -r \"xdebug_info();\"":
    stdout:
      - "xdebug.mode => no value => no value"
    exit-status: 0
  "XDEBUG_MODE=debug php -r \"xdebug_info();\"":
    stdout:
      - "xdebug.mode (through XDEBUG_MODE) => debug => no value"
    exit-status: 0
  "php -v":
    stdout:
      - "PHP {{ php_version }}"
    stderr:
      - "!/Unable to load dynamic library/"
    exit-status: 0
  "php -m":
    stdout:
{% for ext in (ext_pecl_enabled) | unique | sort %}
      - {{ ext }}
{% endfor %}
    exit-status: 0
{% if true == install_composer %}
  "composer -v":
    stdout:
      - "Composer version"
    exit-status: 0
{% endif %}
{% if true == install_faketime %}
  "cat /etc/ld.so.preload":
    stdout:
      - "/usr/lib/faketime/libfaketime.so.1"
    exit-status: 0
{% endif %}

...
